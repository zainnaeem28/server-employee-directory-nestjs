# Production Environment Configuration for Vercel Deployment
# Copy this to .env.production and update with your actual values

NODE_ENV=production
PORT=3001

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=your_production_database_url_here

# Alternative individual parameters (if not using DATABASE_URL)
DB_TYPE=postgres
DB_HOST=your_db_host_here
DB_PORT=5432
DB_USERNAME=your_db_username_here
DB_PASSWORD=your_db_password_here
DB_NAME=your_db_name_here

# CORS Configuration
ALLOWED_ORIGINS=your_frontend_url_here,http://localhost:3000

# External APIs
RANDOM_USER_API_URL=https://randomuser.me/api

# Logging
LOG_LEVEL=info

# Security (Required)
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100 